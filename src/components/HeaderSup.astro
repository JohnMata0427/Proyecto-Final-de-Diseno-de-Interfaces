---
import HeaderInf from "./HeaderInf.jsx";
---

<div class="bg-gris-oscuro pt-7 flex pb-7 justify-between">
    <a class="w-[200px] pl-10 flex items-center" href="/">
        <img
            class="logo w-full h-[40px] rounded-"
            src="/assets/images/Logo.png"
            alt="Logo"
        />
    </a>
    <div class="flex">
        <div class="flex items-center justify-end">
            <input
                class="searchbar w-[610px] h-10 pl-4 mr-10 rounded-2xl"
                type="text"
                placeholder="Buscar Productos..."
            />
            <button class="h-10 mr-14 absolute">
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="icon icon-tabler icon-tabler-search"
                    width="25"
                    height="25"
                    viewBox="0 0 24 24"
                    stroke-width="1.5"
                    stroke="#000000"
                    fill="none"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
                    <path d="M10 10m-7 0a7 7 0 1 0 14 0a7 7 0 1 0 -14 0"></path>
                    <path d="M21 21l-6 -6"></path>
                </svg>
            </button>
        </div>
