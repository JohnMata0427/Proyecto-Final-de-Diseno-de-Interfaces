---
interface Props {
    title: string;
    image: string;
    href: string;
}

const { title, image, href } = Astro.props;
---

<a
    class="flex h-auto w-full flex-col items-center justify-between rounded-3xl bg-gradient-to-b from-morado-primario-900 to-[#D9D9D9] shadow-md shadow-black transition-all hover:scale-105"
    href={href}
>
    <div class="flex h-full items-center justify-center px-4 py-10">
        <img src={image} alt={title} />
    </div>
    <div
        class="flex h-16 w-full items-center justify-center rounded-b-3xl bg-gris-oscuro"
    >
        <h2 class="text-xl font-medium md:text-3xl">{title}</h2>
    </div>
</a>
