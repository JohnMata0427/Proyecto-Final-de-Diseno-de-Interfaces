---
interface Props {
    title: string;
    image: string;
    href: string;
    className?: string;
}

const { title, image, href, className } = Astro.props;
---

<a
    class={`h-[420px] w-64 flex flex-col items-center justify-between rounded-3xl shadow-lg bg-gradient-to-b from-morado-primario-900 to-[#D9D9D9] ${className}`}
    href={href}
>
    <div class="flex h-full items-center justify-center">
        <img src={image} alt={title} />
    </div>
    <div
        class="flex h-16 w-full items-center justify-center rounded-b-3xl bg-gris-oscuro"
    >
        <h2 class="text-3xl font-medium">{title}</h2>
    </div>
</a>
