---
interface props {
    title: string;
    image: string;
    href: string;
    className: string;
}

const { title, image, href, className } = Astro.props;
---

<a
    class={`my-3 h-[420px] w-[260px] flex flex-col items-center justify-between rounded-3xl shadow-lg bg-gradient-to-b from-morado-primario-900 to-[#D9D9D9] ${className}`}
    href={href}
>
    <div class="flex items-center justify-center h-full">
        <img src={image} alt={title} />
    </div>
    <div
        class="flex items-center justify-center bg-gris-oscuro w-full h-16 rounded-b-3xl"
    >
        <h2 class="font-medium text-[27px]">{title}</h2>
    </div>
</a>
