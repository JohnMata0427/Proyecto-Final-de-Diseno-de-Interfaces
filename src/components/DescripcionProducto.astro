---
interface Props {
    id: string;
    nombre: string;
    precio: number;
    descripcion: string;
    categoria: string;
    src: string;
}

const { id, nombre, precio, descripcion, categoria, src } = Astro.props;
---

<section class="flex justify-center py-10">
    <div
        class="mx-10 flex size-[550px] items-center justify-center rounded-bl-2xl rounded-tl-2xl border-2 border-solid border-[#e5e5e5] bg-[#fdfdfd] p-10 shadow-lg"
    >
        <img src={src} alt={nombre} />
    </div>
    <div
        class="mx-10 flex h-auto w-[550px] flex-col rounded-br-2xl rounded-tr-2xl border-2 border-solid border-[#e5e5e5] bg-[#fdfdfd] pt-6 shadow-lg"
    >
        <h3 class="pl-8 pr-32 text-2xl font-bold text-black">{nombre}</h3>
        <p class="py-3 pl-8 text-xl font-bold text-[#209FD5]">${precio}</p>
        <p class="pl-8 pr-24 text-lg font-medium text-[#8D8C8C]">
            {descripcion}
        </p>
        <hr class="my-4 border-2 border-solid border-[#e5e5e5]" />
        <p class="pl-8">
            <strong class="text-black">SKU:</strong><span
                class="text-gris-oscuro">{id}</span
            >
        </p>
        <p class="pl-8">
            <strong class="text-black">Categor√≠a:</strong><span
                class="text-gris-oscuro">{categoria}</span
            >
        </p>
        <input
            class="ml-8 mt-5 w-12 rounded-lg bg-gris-oscuro py-1 text-center"
            type="number"
            value="1"
            min="1"
            max="99"
            id="cantidad"
        />
        <button
            class="ml-8 mt-3 flex h-8 w-48 items-center justify-evenly rounded-2xl bg-gris-oscuro"
            ><svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                class="size-5"
                viewBox="0 0 33 34"
                ><path
                    fill="#fff"
                    d="M11 34c1.3 0 2.3-1.3 2.3-2.8 0-1.6-1-2.8-2.4-2.8-1.3 0-2.4 1.2-2.4 2.8 0 1.5 1 2.7 2.4 2.7Zm16.9 0c1.3 0 2.4-1.3 2.4-2.8 0-1.6-1-2.8-2.4-2.8s-2.4 1.2-2.4 2.8c0 1.5 1 2.7 2.4 2.7ZM10.3 21.5H30L33 5H7.7l-.6-4H0v2.7h5L8.7 27h21.6v-2.7H10.7l-.4-2.8Z"
                ></path></svg
            >

            <span>Agregar al carrito</span>
        </button>
    </div>
</section>
