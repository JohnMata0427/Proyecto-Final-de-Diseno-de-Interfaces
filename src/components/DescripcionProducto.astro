---
const { id, nombre, precio, descripcion, categoria, src } = Astro.props;
---

<section
    class="mx-10 flex flex-col items-center justify-center gap-10 py-10 md:flex-row"
>
    <div
        class="flex h-96 w-full items-center justify-center rounded-l-2xl border-2 border-solid border-[#e5e5e5] bg-[#fdfdfd] p-8 shadow-lg md:w-1/2"
    >
        <img transition:name={`img-${id}`} class="h-full object-contain" src={src} alt={nombre} />
    </div>
    <div
        class="flex h-auto flex-col rounded-r-2xl border-2 border-solid border-[#e5e5e5] bg-[#fdfdfd] px-8 py-6 shadow-lg md:w-1/2"
    >
        <h3 class="text-2xl font-bold text-black">{nombre}</h3>
        <p class="py-3 text-xl font-bold text-[#209FD5]">${precio}</p>
        <p class="text-lg font-medium text-[#8D8C8C]">
            {descripcion}
        </p>
        <hr class="my-4 border-2 border-solid border-[#e5e5e5]" />
        <span class="text-gris-oscuro"
            ><strong class="text-black">SKU: </strong>{id}</span
        >
        <span class="text-gris-oscuro"
            ><strong class="text-black">Categor√≠a: </strong>{
                categoria[0].toUpperCase() + categoria.slice(1)
            }</span
        >
        <input
            class="mt-5 w-12 rounded-lg bg-gris-oscuro py-1 text-center"
            type="number"
            min="1"
            value="1"
            max="99"
        />
        <button
            class="mt-3 flex h-8 w-48 items-center justify-evenly rounded-lg bg-gris-oscuro"
            ><svg
                xmlns="http://www.w3.org/2000/svg"
                fill="none"
                class="size-5"
                viewBox="0 0 33 34"
                ><path
                    fill="#fff"
                    d="M11 34c1.3 0 2.3-1.3 2.3-2.8 0-1.6-1-2.8-2.4-2.8-1.3 0-2.4 1.2-2.4 2.8 0 1.5 1 2.7 2.4 2.7Zm16.9 0c1.3 0 2.4-1.3 2.4-2.8 0-1.6-1-2.8-2.4-2.8s-2.4 1.2-2.4 2.8c0 1.5 1 2.7 2.4 2.7ZM10.3 21.5H30L33 5H7.7l-.6-4H0v2.7h5L8.7 27h21.6v-2.7H10.7l-.4-2.8Z"
                ></path></svg
            >

            <span>Agregar al carrito</span>
        </button>
    </div>
</section>
