---
import Filtrar from '@/components/Filtrar.jsx';
import Productos from '@/components/Productos.astro';
import Layout from '@/layouts/Layout.astro';

import { ofertas } from '@/data/ofertas';
---

<Layout title="Ofertas | Teny">
    <main>
        <img
            class="h-full w-full"
            src="./assets/images/banners/Banner Ofertas.png"
            alt="Oferta 1"
        />
        <section
            class="flex flex-col items-center px-5 py-10 md:flex-row md:items-start"
        >
            <Filtrar categoria={ofertas} client:visible />
            <div class="products m-5 grid w-full gap-2">
                {
                    ofertas.map(({ id, nombre, precio, src }) => (
                        <Productos
                            id={id}
                            nombre={nombre}
                            precio={precio}
                            src={src}
                        />
                    ))
                }
            </div>
        </section>
    </main>
</Layout>
