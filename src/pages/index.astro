---
import Layout from '../layouts/Layout.astro';
import HeaderSup from '../components/HeaderSup.astro';
import CategoriasCard from '../components/CategoriasCard.astro';
import TrabajamosCon from '../components/TrabajamosCon.jsx';
import Productos from '../components/Productos.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Tienda Tecnológica | Tecny">
	<header>
		<HeaderSup />
	</header>
	<main>
		<img class="h-[75vh]" src="./assets/images/banners/Banner Inicio.png" alt="Oferta 1"/>
		<section class="pt-5 pb-16">
			<h2 class="text-[44px] font-normal mb-5 text-center text-morado-primario">Categorías</h2>
			<div class="flex justify-center">
				<CategoriasCard title="Hardware" image="./assets/images/categories/Categoria Hardware.png" href="/categorias/hardware" className="mr-5"/>
				<CategoriasCard title="Perifericos" image="./assets/images/categories/Categoria Perifericos.png" href="/categorias/perifericos" className="mr-5"/>
				<CategoriasCard title="Monitores" image="./assets/images/categories/Categoria Monitores.png" href="/categorias/monitores" className="mr-5"/>
				<CategoriasCard title="Laptops" image="./assets/images/categories/Categoria Laptops.png" href="/categorias/laptops"/>
			</div>
		</section>
		<section>
			<h2 class="text-[44px] mb-5 text-center text-morado-primario font-normal">Trabajamos con</h2>
			<div class="bg-morado-primario">
				<TrabajamosCon client:visible/>
			</div>
		</section>
		<section class="my-10">
			<h2 class="text-[44px] mb-5 text-center text-morado-primario font-normal">Productos Nuevos</h2>
			<div class="flex justify-center">
				<Productos id="SKU: LAP0366" nombre='Laptop HP 15-DW3021WM Core i3 11va' precio={744.99} cantidad={1} src='/assets/images/products/product1.png' className='mr-5'/>
				<Productos id="SKU: LAP0366" nombre='Laptop HP 15-DW3021WM Core i3 11va' precio={744.99} cantidad={1} src='/assets/images/products/product2.png' className='mr-5'/>
				<Productos id="SKU: LAP0366" nombre='Laptop HP 15-DW3021WM Core i3 11va' precio={744.99} cantidad={1} src='/assets/images/products/product3.png' className='mr-5'/>
				<Productos id="SKU: LAP0366" nombre='Laptop HP 15-DW3021WM Core i3 11va' precio={744.99} cantidad={1} src='/assets/images/products/product4.png' className=''/>
			</div>
		</section>
	</main>
	<footer>
		<Footer />
	</footer>
</Layout>

<style is:global>
    * {
        color: white;
        font-family: 'KoPub Batang';
        font-weight: 400;
        word-wrap: break-word;
    }
	h2 {
		font-family: 'Volkhov';
	}
</style>

<style>
	h2 {
		text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5);
	}
</style>